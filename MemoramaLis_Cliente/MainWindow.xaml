<Window x:Class="MemoramaLis_Cliente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoramaLis_Cliente"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="3" Content="Iniciar sesión" HorizontalAlignment="Left" Margin="360,21,0,0" VerticalAlignment="Top" Height="24" Grid.Row="3" Click="Button_Click"/>
        <StackPanel HorizontalAlignment="Left" Margin="255,36,0,0" Orientation="Horizontal" VerticalAlignment="Top" Height="45" Grid.Row="1">
            <Label Content="Email" Height="34"/>
            <TextBox Height="34" TextWrapping="Wrap" x:Name="TBEmail" Text="" Width="212" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Margin="255,22,0,0" Orientation="Horizontal" VerticalAlignment="Top" Height="32" Grid.Row="2">
            <Label Content="Contraseña"/>

            <PasswordBox Height="28"  x:Name="TBContrasenia" Width="212"/>

        </StackPanel>

    </Grid>
</Window>
