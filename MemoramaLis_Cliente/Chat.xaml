<Page x:Class="MemoramaLis_Cliente.ChatVentana"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MemoramaLis_Cliente"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chat">

    <Grid Background="White">
        <TextBlock Name="TBChat" Grid.Row="0">

        </TextBlock>
        <StackPanel Margin="10" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal">
            <TextBox Name="TBMensaje" Grid.Row="1" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="400" />
            <Button Content="Enviar" Name="BtnEnviar" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="80" Click="BtnEnviar_Click" />
        </StackPanel>
        <StackPanel Margin="10" Grid.Row="1" HorizontalAlignment="Right" Width="auto" VerticalAlignment="Bottom">
            
            <Button Content="Salir" Name="BtnSalir" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Click="BtnSalir_Click" />
        </StackPanel>
    </Grid>
</Page>
